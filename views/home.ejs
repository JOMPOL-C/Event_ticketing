<%- include('includes/head') %>
<link rel="stylesheet" href="../styles/home.css">
</head>

<body>
  <%- include('includes/nav') %>

  <!-- Hero Section -->
  <section class="hero">
    <div class="hero-content">
      <h1>ยินดีต้อนรับสู่ Event Ticketing</h1>
      <p>จองตั๋วอีเวนต์สุดพิเศษของคุณได้ในที่เดียว</p>
      <a href="/login" class="btn-primary">เริ่มต้นใช้งาน</a>
    </div>
    <div class="overlay"></div>
  </section>

  <!-- Upcoming Events Section -->
    <section class="events">
    <h2>อีเวนต์ทั้งหมด</h2>

    <% if (!events || events.length === 0) { %>
      <div class="empty-state">
        <i class='bx bx-calendar-x'></i>
        <p class="main">ยังไม่มีอีเวนต์ให้แสดงในขณะนี้</p>
        <p class="sub">กรุณากลับมาอีกครั้งเมื่อมีการเพิ่มอีเวนต์ใหม่</p>
      </div>
    <% } else { %>
      <div class="grid" style="display:grid;grid-template-columns:repeat(auto-fill,minmax(240px,1fr));gap:16px;">
        <% events.forEach(ev => { %>
          <a href="/api/events/<%= ev._id %>" class="card" style="border:1px solid #eee;border-radius:12px;overflow:hidden;text-decoration:none;color:inherit;">
            <% if (ev.coverImage) { %>
              <img src="<%= ev.coverImage %>" alt="" style="width:100%;height:140px;object-fit:cover;">
            <% } %>
            <div style="padding:12px;">
              <div style="font-weight:600;"><%= ev.title %></div>
              <div style="font-size:12px;color:#666;"><%= new Date(ev.startAt).toLocaleString('th-TH') %></div>
              <div style="margin-top:6px;font-weight:600;"><%= Number(ev.price).toLocaleString('th-TH') %> THB</div>
            </div>
          </a>
        <% }) %>
      </div>
    <% } %>
  </section>


  <!-- Call to Action -->
  <section class="cta">
    <h2>อยากจัดงานอีเวนต์ของคุณเอง?</h2>
    <p>สมัครเป็นผู้จัดงานเพื่อสร้างกิจกรรมใหม่ได้ทันที</p>
    <a href="/organizer" class="btn-secondary">สมัครเป็นผู้จัดงาน</a>
  </section>

  <%- include('includes/footer') %>
</body>
</html>
