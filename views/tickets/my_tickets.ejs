<%- include('../includes/head') %>
  <link rel="stylesheet" href="/styles/my_tickets.css">
  </head>

  <body>
    <%- include('../includes/nav') %>
      <main class="container" style="max-width:960px;margin:24px auto;">
        <h1>ตั๋วของฉัน</h1>

        <% if (!tickets || tickets.length===0) { %>
          <p>ยังไม่มีตั๋ว</p>
          <% } else { %>
            <div class="ticket-grid">
              <% tickets.forEach(t=> { %>
                <div class="ticket-card">
                  <h3>
                    <%= t.event.title %>
                  </h3>
                  <p><small>
                      <%= new Date(t.event.startAt).toLocaleString() %>
                    </small></p>
                  <p>โค้ด: <code><%= t.code %></code></p>
                  <% if (t.qrDataUrl) { %>
                    <img src="<%= t.qrDataUrl %>" alt="QR">
                    <% } %>
                </div>
                <% }) %>
            </div>
            <% } %>
      </main>

  </body>

  </html>